<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Dashboard</h1>
    </div>
</div>

<div class="row">
    <!--Membership Tile-->
    <div class="col-md-6 col-lg-4">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-users fa-4x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div>Members</div>
                        <div class="huge">
                            <div ng-show="dc.showMemberCounts">
                                {{dc.memberCounts}}
                            </div>
                            <div ng-hide="dc.showMemberCounts">
                                <span><i class="fas fa-spinner"></i></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <a href="#">
                <div class="panel-footer">
                    <span class="pull-left">View Details</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>

    <!--Tithes Tile-->
    <div class="col-md-6 col-lg-4">
        <div class="panel panel-green">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fas fa-hand-holding-usd fa-4x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div>Total Tithes Today</div>
                        <div class="huge">
                            <div ng-show="dc.showTithesRunningTotals">
                                {{dc.tithesSum | currency}}
                            </div>
                            <div ng-hide="dc.showTithesRunningTotals">
                                <span><i class="fas fa-spinner"></i></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <a href="#">
                <div class="panel-footer">
                    <span class="pull-left">View Details</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>

    <!--Offerings Tile-->
    <div class="col-md-6 col-lg-4">
        <div class="panel panel-yellow">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fas fa-dollar-sign fa-4x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div>Total Offerings Today</div>
                        <div class="huge">
                            <div ng-show="dc.showOfferingsRunningTotals">
                                {{dc.offeringsSum | currency}}
                            </div>
                            <div ng-hide="dc.showOfferingsRunningTotals">
                                <span><i class="fas fa-spinner"></i></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <a href="#">
                <div class="panel-footer">
                    <span class="pull-left">View Details</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>

    <div class="col-md-6 col-lg-4">
        <div class="panel panel-red">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fas fa-university fa-4x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div>Expenses Today</div>
                        <div class="huge">
                            <div ng-show="dc.showExpensesRunningTotals">
                                {{dc.expensesSum | currency}}
                            </div>
                            <div ng-hide="dc.showExpensesRunningTotals">
                                <span><i class="fas fa-spinner"></i></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <a href="#">
                <div class="panel-footer">
                    <span class="pull-left">View Details</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
</div>