<page-header page-title="Add Offerings"></page-header>

<div ng-controller="offeringController as oc">
    <div class="row">
        <div class="col-md-5">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Add Offerings
                </div>
                <div class="panel-body">
                    <add-offering on-save="oc.doSaveOffering(offering)" enums="oc.enums"></add-offering>
                </div>
            </div>
        </div>
        <running-totals running-total="oc.runningTotal" offering-activity="oc.offeringActivity" title="Offering"></running-totals>
    </div>

    <!--Offering Activity-->
    <div style="padding-top: 10px;">
        <offering-activity get-offering-activity="oc.getOfferingActivity(offeringActivityType)"
                           offering-activity-type="{{oc.activityType.Today}}"
                           panel-settings="oc.offeringActivityPanelSettings"
                           offering-activity="oc.offeringActivity"
                           open-edit-modal="oc.openEditOfferingModal(offering, index)"
                           open-delete-modal="oc.openDeleteOfferingModal(offeringId)"
                           show-edit-delete="true">

        </offering-activity>
    </div>

</div>