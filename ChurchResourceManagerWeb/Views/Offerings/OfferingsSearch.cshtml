<div class="row">
    <div class="col-md-12">
        <div ng-controller="offeringController as oc">
            <div class="col-md-12">
                <reporting-tabs report-type="Offering" go-button="oc.getOfferingActivitySearch(searchType, startDate, endDate, familyId, memberId)" no-results-found="oc.noResults" reset-tabs="oc.resetSearch()"></reporting-tabs>
            </div>
            <span us-spinner="{radius:30, width:8, length: 16}" spinner-key="spinner-OR"></span>
            <div ng-if="oc.offeringActivity.length > 0">
                <offering-activity panel-settings="oc.offeringActivityPanelSettings"
                                   offering-activity="oc.offeringActivity"
                                   include-date-column="true"
                                   show-edit-delete="false">
                </offering-activity>
            </div>

        </div>
    </div>
</div>