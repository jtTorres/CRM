<page-header page-title="Offerings Search"></page-header>

<div ng-controller="offeringController as oc">
    <offering-activity get-offering-activity="oc.getOfferingActivity(offeringActivityType)"
                       offering-activity-type="{{oc.activityType.All}}"
                       panel-settings="oc.offeringActivityPanelSettings"
                       offering-activity="oc.offeringActivity"
                       open-edit-modal="oc.openEditOfferingModal(offering, index)"
                       open-delete-modal="oc.openDeleteOfferingModal(offeringId)"
                       include-date-column="true"
                       show-edit-delete="false">
    </offering-activity>
</div>

