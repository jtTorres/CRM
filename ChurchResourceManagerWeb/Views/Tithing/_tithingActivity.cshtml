<!--Today's tithing Activity-->

<div class="col-xs-12">
    <div uib-accordion>
        <div uib-accordion-group class="panel panel-default" heading="{{tac.panelSettings.panelHeading}}" is-open="tac.panelSettings.isOpen">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Member ID</th>
                            <th>Name</th>
                            <th ng-if="tac.includeDateColumn === 'true'">Date</th>
                            <th>Amount</th>
                            <th>Check Number</th>
                            <th>Comments</th>
                            <th width="6%"></th> <!--empty space for edit/delete-->
                        </tr>
                        <tr class="list-group" id="searchRow" name="searchRow">
                            <td>
                                <input type="text" id="txtMemberId" name="txtMemberId" class="form-control" ng-model="search.MemberId" />
                            </td>
                            <td>
                                <input type="text" id="txtName" name="txtName" class="form-control" ng-model="search.MemberName" />
                            </td>
                            <td ng-if="tac.includeDateColumn === 'true'">
                                <input type="text" id="txtDate" name="txtDate" class="form-control" ng-model="search.TitheDate" />
                            </td>
                            <td>
                                <input type="text" id="txtAmount" name="txtAmount" class="form-control" ng-model="search.TitheAmountString" />
                            </td>
                            <td>
                                <input type="text" id="txtCheckNumber" name="txtCheckNumber" class="form-control" ng-model="search.CheckNumber" />
                            </td>
                            <td>
                                <input type="text" id="txtComments" name="txtComments" class="form-control" ng-model="search.Comments" />
                            </td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="text-left" ng-repeat="tithe in tac.tithingActivity | filter: search">
                            <td>{{tithe.MemberId}}</td>
                            <td>{{tithe.MemberName}}</td>
                            <td ng-if="tac.includeDateColumn === 'true'">{{tithe.TitheDate}}</td>
                            <td>{{tithe.TitheAmount | currency}}</td>
                            <td>{{tithe.CheckNumber}}</td>
                            <td>{{tithe.Comments}}</td>
                            <td>
                                <span ng-click="tac.editTithe(tithe, $index)" uib-tooltip="Click to Edit" class="glyphicon glyphicon-pencil clickable"></span>
                                |
                                <span ng-click="tac.deleteTithe(tithe.TitheId, tithe.MemberId)" uib-tooltip="Click to Delete" class="glyphicon glyphicon-remove clickable"></span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>