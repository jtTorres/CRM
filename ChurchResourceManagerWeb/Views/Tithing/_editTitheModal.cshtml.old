<div class="modal-header">
    <button type="button" class="close" ng-click="et.closeEditTitheModal()">&times;</button>
    <h4>Edit Tithe</h4>
</div>
<div class="modal-body">
    <!--Error Message Banner-->
    <div ng-show="et.processFlow.error">
        <div class="alert alert-danger alert-dismissible fade in">
            <a class="close" data-dismiss="alert" aria-label="close">&times;</a>
            {{et.processFlow.errorMessage}}
        </div>
    </div>
    <form id="editTitheForm" name="editTitheForm" novalidate @*ng-submit="et.updateTithe(et.edit.Tithe)"*@ autocomplete="off">
        <!--Member Id-->
        <div class="row">
            <div class="col-xs-12 col-sm-push-2">
                <div class="form-group">
                    <input id="editMemberIdTextBx"
                           name="editMemberIdTextBx"
                           class="form-control"
                           type="text"
                           placeholder="Name or Member Id"
                           ng-model="et.edit.selectedMember"
                           uib-typeahead="member as member.MemberKey for member in et.allMembership | filter: {MemberKey:$viewValue} | limitTo: 8"
                           typeahead-on-select="et.onMemberSelected($item, $model, $label)"
                           required />
                </div>
            </div>

            <!--Date-->
            <div class="col-xs-12 col-sm-push-2">
                <div class="form-group">
                    <input id="editDateTxtBx"
                           name="editDateTxtBx"
                           class="form-control"
                           type="text"
                           placeholder="Date (mm/dd/yyyy)"
                           ng-model="et.edit.Tithe.TitheDate"
                           ui-mask="99/99/9999"
                           ui-mask-placeholder
                           model-view-value="true"
                           required />
                </div>
            </div>

            <!--Check Number-->
            <div class="col-xs-12 col-sm-push-2">
                <div class="form-group">
                    <input id="editCheckNumberCkBx" name="checkNumberCkBx" type="checkbox" ng-model="et.edit.Tithe.IsCheck" />
                    <label for="editCheckNumberTxtBx">Check Number</label>
                    <input id="editCheckNumberTxtBx" name="editCheckNumberTxtBx" class="form-control" type="text" placeholder="Check Number" ng-model="et.edit.Tithe.CheckNumber"
                           ng-show="et.edit.Tithe.IsCheck" />
                </div>
            </div>

            <!--Amount-->
            <div class="col-xs-12 col-sm-push-2">
                <div class="form-group">
                    <input id="editAmountTxtBx" name="editAmountTxtBx" class="form-control" type="text" placeholder="Tithe Amount (Ex. $0.00)" ng-model="et.edit.Tithe.TitheAmount" required />
                </div>
            </div>

            <!--Comments-->
            <div class="col-xs-12 col-sm-push-2">
                <div class="form-group">
                    <input id="editCommentsTxtBx" name="editCommentsTxtBx" class="form-control" type="text" placeholder="Comments or Information" ng-model="et.edit.Tithe.Comments" />
                </div>
            </div>

        </div>

    </form>
</div>
<div class="modal-footer">
    <!--Submit and Clear Form Buttons-->
    <div class="col-xs-12">
        <button id="editSubmitBtn" name="editSubmitBtn" class="btn btn-primary" type="button" ng-click="et.updateTithe(et.edit.Tithe, tc.grid)">Save</button>
        @*<button id="editClearFormBtn" name="editClearFormBtn" class="btn btn-info" type="button" ng-click="et.clearForm()">Clear Form</button>*@
    </div>
</div>