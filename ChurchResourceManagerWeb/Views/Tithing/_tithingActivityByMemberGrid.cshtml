    <div uib-accordion>
        <div uib-accordion-group class="panel panel-primary text-center" heading="{{tbmg.panelSettings.panelHeading}}" is-open="tbmg.panelSettings.isOpen">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Amount</th>
                            <th>Comments</th>
                            <th></th> <!--Empty Space for the edit icon-->
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="memberTithe in tbmg.MemberTithes.data">
                            <td>{{memberTithe.TitheDate}}</td>
                            <td>{{memberTithe.TitheAmount}}</td>
                            <td data-toggle="tooltip" title="{{memberTithe.Comments}}">{{memberTithe.Comments}}</td>
                            <td>
                                <span ng-click="tbmg.editTithe(memberTithe, $index, 1)" uib-tooltip="Click to Edit" class="glyphicon glyphicon-pencil clickable"></span>
                                |
                                <span ng-click="tbmg.openDeleteTithesModal(memberTithe.TitheId)" uib-tooltip="Click to Edit" class="glyphicon glyphicon-remove clickable"></span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>