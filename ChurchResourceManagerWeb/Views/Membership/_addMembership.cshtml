<form id="amc.addMembershipForm" name="amc.addMembershipForm" novalidate ng-submit="amc.addMembership(amc.Membership, amc.addMembershipForm)" autocomplete="off">
    <div class="col-xs-12">
        <uib-accordion close-others="amc.accordionSettings.closeOthers">
            <div uib-accordion-group class="panel-default" is-open="amc.accordionSettings.isFamilyOpen">
                <uib-accordion-heading>
                    Family Information   <i class="pull-right glyphicon" ng-class="{'glyphicon-chevron-down': amc.accordionSettings.isFamilyOpen, 'glyphicon-chevron-up': !amc.accordionSettings.isFamilyOpen}"></i>
                </uib-accordion-heading>
                <div class="col-xs-6">
                    <div class="form-group" ng-class="{'has-error' : amc.addMembershipForm.familyNameTxtBx.$invalid && amc.addMembershipForm.familyNameTxtBx.$touched}">
                        <label for="familyNameTxtBx">Family Name</label>
                        <input id="familyNameTxtBx" name="familyNameTxtBx" class="form-control" type="text" placeholder="(Ex. Torres-Velez)"
                               ng-model="amc.Membership.FamilyName" required maxlength="80" />
                        <div class="help-block-error" ng-messages="amc.addMembershipForm.familyNameTxtBx.$error" ng-if="amc.addMembershipForm.familyNameTxtBx.$touched">
                            <div ng-messages-include="message-template"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!--member information-->
            <div ng-repeat="info in amc.memberInfo track by $index">
                <member-information member-info="info" accordion-settings="amc.accordionSettings" index="$index" member-info-count="amc.memberInfo.length -1"></member-information>
            </div>

            <div uib-accordion-group class="panel-default" is-open="amc.accordionSettings.isAddressInfoOpen">
                <uib-accordion-heading>
                    Address Information   <i class="pull-right glyphicon" ng-class="{'glyphicon-chevron-down': amc.accordionSettings.isAddressInfoOpen, 'glyphicon-chevron-up': !amc.accordionSettings.isAddressInfoOpen}"></i>
                </uib-accordion-heading>
                <div class="col-xs-6">
                    <div class="form-group" ng-class="{'has-error' : amc.addMembershipForm.address1TxtBx.$invalid && amc.addMembershipForm.address1TxtBx.$touched}">
                        <label for="address1TxtBx">Address</label>
                        <input id="address1TxtBx" name="address1TxtBx" class="form-control" type="text" placeholder="123 Main St." ng-model="amc.Membership.Address1" required
                               maxlength="255" />
                        <div class="help-block-error" ng-messages="amc.addMembershipForm.address1TxtBx.$error" ng-if="amc.addMembershipForm.address1TxtBx.$touched">
                            <div ng-messages-include="message-template"></div>
                        </div>
                        <input id="address2TxtBx" name="address2TxtBx" class="form-control" type="text" placeholder="Apt. 123" ng-model="amc.Membership.Address2"
                               maxlength="255" />
                    </div>
                    <div class="form-group" ng-class="{'has-error' : amc.addMembershipForm.cityTxtBx.$invalid && amc.addMembershipForm.cityTxtBx.$touched}">
                        <label for="cityTxtBx">City</label>
                        <input id="cityTxtBx" name="cityTxtBx" class="form-control" type="text" placeholder="Milwaukee" ng-model="amc.Membership.City" required
                               maxlength="50" />
                        <div class="help-block-error" ng-messages="amc.addMembershipForm.cityTxtBx.$error" ng-if="amc.addMembershipForm.cityTxtBx.$touched">
                            <div ng-messages-include="message-template"></div>
                        </div>
                    </div>
                    <div class="form-group" ng-class="{'has-error' : amc.addMembershipForm.stateTxtBx.$invalid && amc.addMembershipForm.stateTxtBx.$touched}">
                        <label for="stateTxtBx">State</label>
                        <select id="stateTxtBx" name="stateTxtBx" class="form-control" ng-model="amc.Membership.SelectedState" ng-options="m.Name for m in amc.stateList" required></select>
                        <div class="help-block-error" ng-messages="amc.addMembershipForm.stateTxtBx.$error" ng-if="amc.addMembershipForm.stateTxtBx.$touched">
                            <div ng-messages-include="message-template"></div>
                        </div>
                    </div>
                    <div class="form-group" ng-class="{'has-error' : amc.addMembershipForm.zipTxtBx.$invalid && amc.addMembershipForm.zipTxtBx.$touched}">
                        <label for="zipTxtBx">Zip Code</label>
                        <input id="zipTxtBx" name="zipTxtBx" class="form-control" type="text" ng-model="amc.Membership.ZipCode" required
                               maxlength="10" ui-mask="99999-?9?9?9?9" />
                        <div class="help-block-error" ng-messages="amc.addMembershipForm.zipTxtBx.$error" ng-if="amc.addMembershipForm.zipTxtBx.$touched">
                            <div ng-messages-include="message-template"></div>
                        </div>
                    </div>
                </div>
            </div>
        </uib-accordion>
    </div>
    <!--Submit and Clear Form Buttons-->
    <div class="col-xs-12" style="padding-top: 1%;">
        <button id="submitBtn" name="submitBtn" class="btn btn-primary" type="submit">Save</button>
        <button id="clearFormBtn" name="clearFormBtn" class="btn btn-info" type="button" ng-click="amc.clearForm()">Clear Form</button>
    </div>
</form>