

@{
    ViewBag.Title = "Add Membership";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@ViewBag.Title</h1>
    </div>
</div>

<div ng-controller="membershipController as mc">
    <manage-membership active-tab="mc.activeTab"
                       disable-tab="mc.enableDisableTab(index)"
                       being-edited="mc.beingEdited"
                       family="mc.Family"
                       address="mc.Address"
                       member-info-array="mc.memberInfoArray"
                       contact-info="mc.contactInfo"
                       on-edit="mc.doEdit(formName)"
                       on-submit="mc.doSave(formName, formData)"
                       state-list="mc.stateList"
                       on-find-active-index="mc.findActiveIndex(currentIndex, arrayCount)">

    </manage-membership>
</div>